<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginActivity">
    <activity
        android:id="@+id/loginActivity"
        android:name="com.example.kamatechs_app.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.kamatechs_app.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_storageActivity"
            app:destination="@id/storageActivity" />
        <action
            android:id="@+id/action_homeFragment_to_weatherActivity"
            app:destination="@id/weatherActivity" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.kamatechs_app.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/developersFragment"
        android:name="com.example.kamatechs_app.DevelopersFragment"
        android:label="fragment_developers"
        tools:layout="@layout/fragment_developers" />
    <fragment
        android:id="@+id/FAQFragment"
        android:name="com.example.kamatechs_app.FAQFragment"
        android:label="fragment_f_a_q"
        tools:layout="@layout/fragment_f_a_q" />
    <activity
        android:id="@+id/weatherActivity"
        android:name="com.example.kamatechs_app.api.WeatherActivity"
        android:label="activity_weather"
        tools:layout="@layout/activity_weather"/>
    <activity
        android:id="@+id/signupActivity"
        android:name="com.example.kamatechs_app.SignupActivity"
        android:label="activity_signup"
        tools:layout="@layout/activity_signup" />
    <activity
        android:id="@+id/storageActivity"
        android:name="com.example.kamatechs_app.StorageActivity"
        android:label="activity_storage"
        tools:layout="@layout/activity_storage" />
</navigation>